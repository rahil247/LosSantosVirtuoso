

{
  "version": 2,
  "builds": [
    {
      "src": "setup.sh",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "staticfiles_build"
      }
    },
    {
      "src": "elevate/wsgi.py",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "50mb", "runtime": "python3.9" }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "elevate/wsgi.py"
    }
  ],
  "buildCommand": "./setup.sh && python3 elevate/manage.py collectstatic --noinput && python3 elevate/manage.py migrate"
}
